alert() {
    # Add an "alert" alias for long running commands. Use like so:
    # sleep 10; alert

    if ( is_machine 'macOS' ); then
        # find sounds in
        # ~/Library/Sounds
        # /System/Library/Sounds

        local _cmd='display notification "Work finished."'
        _cmd+=' with title "Terminal"'
        _cmd+=" sound name \"${1:-Glass}\""

        osascript -e "${_cmd}"
    elif ( is_machine 'linux' ); then
        notify-send -u low 'Terminal work finished.'
    fi
}

if [[ -n "${ZSH_NAME}" ]]; then
    alert "${@}"
fi
