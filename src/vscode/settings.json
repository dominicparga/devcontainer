{
    // PRIVACY

    // Also usage data is included in the crash-reporter
    // and we're talking about microsoft.
    "telemetry.telemetryLevel": "off",

    // APPEARANCE

    // window

    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": 1,

    // settings

    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.openDefaultSettings": false,

    // workbench + explorer + breadcrumbs

    "workbench.editor.showTabs": true,
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Dracula", // "Dracula",
    "workbench.activityBar.visible": true,
    "explorer.sortOrder": "filesFirst",
    "explorer.confirmDragAndDrop": false,
    "breadcrumbs.enabled": true,
    "breadcrumbs.icons": true,

    // EDITOR

    // general

    "editor.formatOnSave": false,
    "editor.renderControlCharacters": false,
    "editor.renderLineHighlight": "none",
    "editor.renderFinalNewline": true,
    "editor.lineNumbers": "on",
    "editor.suggestSelection": "first",

    // cursor

    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorSurroundingLines": 0,
    "editor.cursorStyle": "line",

    // line wrapping

    "editor.wordWrap": "off",

    // minimap

    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 120,

    // DO NOT SET MANUALLY
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // font settings

    // - Cascadia Code is from Microsoft, easily installed (< 1 min) via GitHub
    //   GitHub-Link: https://github.com/microsoft/cascadia-code/releases
    // - Menlo is macOS
    // - Courier and monospace are thinner and just fallbacks for the other two
    //
    // - all fonts are monospace-fonts
    // - Cascadia Code and Menlo have * in the line's height's center
    //   e.g. 3*4, /* comment */, x *= 4, * item in markdown
    "editor.fontFamily": "Cascadia Code, Menlo, Courier, monospace",
    // replaces (only visually!) common chars, e.g. >=
    // - safe when searching >, =, >=
    // - keep width of original chars (2 for >=)
    // - shows original char under block-cursor
    "editor.fontLigatures": true,
    "editor.fontSize": 16,

    // whitespaces

    "editor.renderWhitespace": "none",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    // some files need false!
    "files.trimTrailingWhitespace": false,
    "diffEditor.ignoreTrimWhitespace": false,

    // brackets

    "editor.matchBrackets": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",

    // terminal

    "terminal.integrated.scrollback": 100000,

    // general

    "extensions.ignoreRecommendations": false,
    // utility
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 1000,
    "files.associations": {
        ".latexmkrc": "perl",
        "*.mdx": "markdown",
        "config.general": "properties",
        "config": "properties",
        "SConscript": "python",
        "SConstruct": "python",
        "TAG_EDITMSG": "git-commit"
        // "*.thor": "ruby",
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.pyc": true,
        "**/.svn": true,
        "**/CVS": true
    },

    // GIT

    "scm.defaultViewMode": "tree",
    "[git-commit]": {
        "editor.rulers": [50, 72]
    },

    // VIM

    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.scroll": 20,
    // moving cursor over folded text without entering it
    "vim.foldfix": true,
    // search
    "vim.hlsearch": true,
    "vim.smartcase": true,
    // easymotion
    "vim.easymotion": true,

    // keybindings
    "vim.changeWordIncludesWhitespace": true,
    "vim.visualModeKeyBindingsNonRecursive": [

        // UTILS
        // (dont forget normal-mode)

        { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["<leader>", "P"], "commands": ["workbench.action.showCommands"] },
        { "before": ["<leader>", "e"], "commands": ["workbench.action.toggleSidebarVisibility"] },

        // CODE INTERACTION
        // (dont forget normal-mode)

        { "before": ["<leader>", "U"], "commands": ["editor.action.transformToUppercase"] },
        { "before": ["<leader>", "u"], "commands": ["editor.action.transformToLowercase"] },
        { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [

        // UTILS
        // (dont forget visual-mode)

        { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["<leader>", "P"], "commands": ["workbench.action.showCommands"] },
        { "before": ["<leader>", "e"], "commands": ["workbench.action.toggleSidebarVisibility"] },

        // CODE INTERACTION
        // (dont forget visual-mode)

        { "before": ["<leader>", "U"], "commands": ["editor.action.transformToUppercase"] },
        { "before": ["<leader>", "u"], "commands": ["editor.action.transformToLowercase"] },
        { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },

        // CURSOR

        { "before": ["<leader>", "c", "j"], "commands": ["editor.action.insertCursorBelow"] },
        { "before": ["<leader>", "c", "k"], "commands": ["editor.action.insertCursorAbove"] },

        // CODE NAVIGATION

        { "before": ["<leader>", "b"], "commands": ["workbench.action.navigateBack"] },
        { "before": ["<leader>", "f"], "commands": ["workbench.action.navigateForward"] },
        { "before": ["<leader>", "#"], "commands": ["editor.action.goToDeclaration"] },

        // TAB SPLITTING

        { "before": ["<leader>", "s", "h"], "commands": ["workbench.action.splitEditorLeft"] },
        { "before": ["<leader>", "s", "j"], "commands": ["workbench.action.splitEditorDown"] },
        { "before": ["<leader>", "s", "k"], "commands": ["workbench.action.splitEditorUp"] },
        { "before": ["<leader>", "s", "l"], "commands": ["workbench.action.splitEditorRight"] },

        // TAB MOVING

        { "before": ["<leader>", "m", "h"], "commands": ["workbench.action.moveEditorToLeftGroup"] },
        { "before": ["<leader>", "m", "j"], "commands": ["workbench.action.moveEditorToBelowGroup"] },
        { "before": ["<leader>", "m", "k"], "commands": ["workbench.action.moveEditorToAboveGroup"] },
        { "before": ["<leader>", "m", "l"], "commands": ["workbench.action.moveEditorToRightGroup"] },

        // GROUP NAVIGATION

        { "before": ["<leader>", "w", "h"], "commands": ["workbench.action.navigateLeft"] },
        { "before": ["<leader>", "w", "j"], "commands": ["workbench.action.navigateDown"] },
        { "before": ["<leader>", "w", "k"], "commands": ["workbench.action.navigateUp"] },
        { "before": ["<leader>", "w", "l"], "commands": ["workbench.action.navigateRight"] },

        // TAB NAVIGATION

        { "before": ["<leader>", "t", "h"], "commands": ["workbench.action.previousEditorInGroup"] },
        { "before": ["<leader>", "t", "j"], "commands": ["workbench.action.previousEditorInGroup"] },
        { "before": ["<leader>", "t", "k"], "commands": ["workbench.action.nextEditorInGroup"] },
        { "before": ["<leader>", "t", "l"], "commands": ["workbench.action.nextEditorInGroup"] },

        // TAB ACCESS VIA NUMBER

        { "before": ["<leader>", "t", "1"], "commands": ["workbench.action.openEditorAtIndex1"] },
        { "before": ["<leader>", "t", "2"], "commands": ["workbench.action.openEditorAtIndex2"] },
        { "before": ["<leader>", "t", "3"], "commands": ["workbench.action.openEditorAtIndex3"] },
        { "before": ["<leader>", "t", "4"], "commands": ["workbench.action.openEditorAtIndex4"] },
        { "before": ["<leader>", "t", "5"], "commands": ["workbench.action.openEditorAtIndex5"] },
        { "before": ["<leader>", "t", "6"], "commands": ["workbench.action.openEditorAtIndex6"] },
        { "before": ["<leader>", "t", "7"], "commands": ["workbench.action.openEditorAtIndex7"] },
        { "before": ["<leader>", "t", "8"], "commands": ["workbench.action.openEditorAtIndex8"] },
        { "before": ["<leader>", "t", "9"], "commands": ["workbench.action.openEditorAtIndex9"] }
    ]
}
